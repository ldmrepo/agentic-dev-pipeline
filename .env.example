# .env.example - 환경 변수 템플릿

# ==============================================
# Anthropic Claude Code 설정
# ==============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================
# GitHub 통합 설정
# ==============================================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_organization
GITHUB_REPO=your_repository_name

# ==============================================
# Slack 통합 (선택사항)
# ==============================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_CHANNEL_ID=C1234567890
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==============================================
# Docker Registry (선택사항)
# ==============================================
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ==============================================
# 클라우드 플랫폼 설정 (선택사항)  
# ==============================================
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Azure
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ==============================================
# 데이터베이스 설정
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/agentic_dev
REDIS_URL=redis://localhost:6379
MONGODB_URI=mongodb://localhost:27017/agentic_dev

# ==============================================
# 모니터링 및 로깅
# ==============================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ELK Stack
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# External Logging
LOG_API_KEY=your_logging_service_api_key
LOG_ENDPOINT=https://api.logging-service.com/v1/logs

# ==============================================
# 보안 및 인증
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# API Keys for security tools
SNYK_TOKEN=your_snyk_api_token
SONARQUBE_TOKEN=your_sonarqube_token

# ==============================================
# 파이프라인 설정
# ==============================================
# 자동화 레벨: conservative, standard, aggressive, autonomous
AUTOMATION_LEVEL=standard

# 품질 게이트 기준
MIN_CODE_COVERAGE=85
MAX_RESPONSE_TIME=200
MAX_CRITICAL_VULNERABILITIES=0

# 실행 제한 (분)
PLANNING_TIMEOUT=30
DEVELOPMENT_TIMEOUT=120
TESTING_TIMEOUT=45
DEPLOYMENT_TIMEOUT=30

# ==============================================
# 알림 설정
# ==============================================
NOTIFICATION_CHANNELS=slack,email
ALERT_EMAIL=alerts@your-company.com
CRITICAL_ALERT_PHONE=+1234567890

# ==============================================
# 개발 환경 설정
# ==============================================
NODE_ENV=development
DEBUG=agentic:*
LOG_LEVEL=INFO
LOG_FORMAT=json

# 포트 설정
API_PORT=3000
FRONTEND_PORT=3001
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
